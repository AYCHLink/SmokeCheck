#!/usr/bin/env php
<?php

error_reporting(0);

require __DIR__ . '/../vendor/autoload.php';

array_shift($argv);
$help = isset($argv[0]) && $argv[0] === '--help';

if($help) {
    $content = <<<HELP

\e[33mUsage:\e[0m
  cigar [options]

\e[33mOptions:\e[0m
      \e[32m--quiet\e[0m                    Do not output any message


HELP;
    echo $content;
    exit(0);
}

$quiet = isset($argv[0]) && $argv[0] === '--quiet';
try {
    $domains = (new \Brunty\Cigar\Parser)->parse('.cigar');
} catch(\Throwable $e) {
    echo \Brunty\Cigar\Outputter::CONSOLE_RED . "Unable to parse '.cigar' file." . \Brunty\Cigar\Outputter::CONSOLE_RESET . PHP_EOL;
    exit(1);
}

$results = (new \Brunty\Cigar\Checker)->check($domains);
$passed = (new \Brunty\Cigar\Outputter)->output($results, $quiet);

if ( ! $passed) {
    exit(1);
}

exit(0);
