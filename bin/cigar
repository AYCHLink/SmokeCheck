#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

array_shift($argv);
$help = isset($argv[0]) && $argv[0] === '--help';

if($help) {
    $content = <<<HELP

\e[33mUsage:\e[0m
  cigar [options]

\e[33mOptions:\e[0m
      \e[32m--quiet\e[0m                    Do not output any message


HELP;
    echo $content;
    exit(0);
}

$quiet = isset($argv[0]) && $argv[0] === '--quiet';

$domains = (new \Brunty\Cigar\Parser)->parse('.cigar');
$results = (new \Brunty\Cigar\Checker)->check($domains);
$passed = (new \Brunty\Cigar\Outputter)->output($results, $quiet);

if ( ! $passed) {
    exit(1);
}

exit(0);
